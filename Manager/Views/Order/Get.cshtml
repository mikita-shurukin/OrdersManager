@model IEnumerable<Manager.DAL.Models.Order>

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Order Date</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Item Ids</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate</td>
                <td>@order.CustomerName</td>
                <td>@order.CustomerEmail</td>
                <td>
                    @if (order.Items != null)
                    {
                        foreach (var item in order.Items)
                        {
                            <span>@item.Id</span>
                        }
                    }
                </td>

                <td>
                    <a class="btn btn-primary" href="/api/Order/Update/@order.Id">Update</a>
                </td>
                <td>
                    <button class="btn btn-danger delete-btn" data-id="@order.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" href="/api/Order/Create">Create Order</a>

@section Scripts {
    <script>
        document.querySelectorAll('.delete-btn').forEach(button => {
            button.addEventListener('click', function () {
                const id = this.getAttribute('data-id');
                if (confirm('Are you sure you want to delete this order?')) {
                    fetch(`/api/Order/${id}`, {
                        method: 'DELETE'
                    })
                        .then(response => {
                            if (response.ok) {
                                location.reload();
                            } else {
                                console.error('Failed to delete order.');
                            }
                        })
                        .catch(error => {
                            console.error('Error occurred while deleting order:', error);
                        });
                }
            });
        });
    </script>
}
