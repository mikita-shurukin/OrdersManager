@model Manager.Models.Requests.UpdateOrder

<h1>Update Order</h1>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Скрытое поле для передачи Id заказа -->

    <div class="form-group">
        <label asp-for="OrderDate">Order Date:</label>
        <input asp-for="OrderDate" class="form-control" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustomerName">Customer Name:</label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustomerEmail">Customer Email:</label>
        <input asp-for="CustomerEmail" class="form-control" />
        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ItemIds">Items:</label>
        <select asp-for="ItemIds" asp-items="@(new SelectList(ViewBag.Items, "Id", "Name"))" multiple class="form-control"></select>
        <span asp-validation-for="ItemIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
